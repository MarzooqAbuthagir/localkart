<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_avg_rating"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_avg_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_regular"
                android:layout_toLeftOf="@+id/lay_avg_rating"/>

            <LinearLayout
                android:id="@+id/lay_avg_rating"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/view_space1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_avg_rating"
                    android:layout_gravity="center"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star"
                    />
            </LinearLayout>

            <View
                android:id="@+id/view_space1"
                android:layout_toLeftOf="@+id/lay_view_count"
                android:layout_width="5dp"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/lay_view_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_view_count"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_view_count"
                    android:layout_gravity="center"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_open_eye"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_regular"
                android:layout_toLeftOf="@+id/view_space"/>

            <View
                android:id="@+id/view_space"
                android:layout_toLeftOf="@+id/lay_notify"
                android:layout_width="10dp"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/lay_notify"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/view1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_notify"
                    android:layout_gravity="center"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />
            </LinearLayout>
            <View
                android:id="@+id/view1"
                android:layout_toLeftOf="@+id/lay_share"
                android:layout_width="10dp"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/lay_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/lay_end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_share"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_share" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_end"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view"
                    android:layout_width="10dp"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:id="@+id/lay_verify"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/lay_curve_shape"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_verify" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <LinearLayout-->
<!--                android:padding="5dp"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:gravity="center"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@android:color/transparent"-->
<!--                android:orientation="vertical">-->

            <View
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:background="#fff"/>

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="52dp"-->
<!--                android:layout_height="52dp"-->
<!--                app:cardCornerRadius="30dp"-->
<!--                app:cardBackgroundColor="@color/colorPrimaryDark">-->

<!--                <androidx.cardview.widget.CardView-->
<!--                    android:layout_gravity="center"-->
<!--                    android:padding="5dp"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    app:cardCornerRadius="25dp">-->

<!--                <ImageView-->
<!--                    android:id="@+id/iv_shop_logo"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    />-->
<!--                </androidx.cardview.widget.CardView>-->
<!--            </androidx.cardview.widget.CardView>-->


            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:cardCornerRadius="4dp"
                style="@style/Widget.MaterialComponents.CardView"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorPrimaryDark"
                android:elevation="5dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:id="@+id/iv_shop_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </com.google.android.material.card.MaterialCardView>


<!--            </LinearLayout>-->

            <View
                android:layout_gravity="center"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="#fff"/>

            <View
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#efefef"/>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="2"
                    android:id="@+id/tv_shop_desc"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/desc_text"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FEE9F3"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lay_direction"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:tint="@color/bottom_box_color"
                    android:src="@drawable/ic_directions"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:text="Direction • "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_distance"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:tint="@color/bottom_box_color"
                    android:src="@drawable/ic_call"/>

                <TextView
                    android:id="@+id/tv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_more_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:tint="@color/bottom_box_color"
                    android:src="@drawable/ic_more_details_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="More Details"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
