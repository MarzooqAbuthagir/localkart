<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_toLeftOf="@id/lay_notify"
                android:layout_centerInParent="true"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/desc_text"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/lay_notify"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/view1"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_notify"
                android:layout_gravity="center"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_bell" />
            </LinearLayout>
            <View
                android:id="@+id/view1"
                android:layout_toLeftOf="@+id/lay_share"
                android:layout_width="10dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:id="@+id/lay_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/view"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_share"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_share" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_alignParentEnd="true"
                android:layout_width="10dp"
                android:layout_height="30dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text=""
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="14dp" />


        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

<!--            <LinearLayout-->
<!--                android:padding="5dp"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:gravity="center"-->
<!--                android:layout_gravity="center"-->
<!--                android:orientation="vertical">-->

            <View
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:background="#fff"/>

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="52dp"-->
<!--                android:layout_height="52dp"-->
<!--                app:cardCornerRadius="30dp"-->
<!--                app:cardBackgroundColor="@color/colorPrimaryDark">-->

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_gravity="center"-->
<!--                android:padding="5dp"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                app:cardCornerRadius="25dp"-->
<!--                app:strokeWidth="1dp"-->
<!--                app:strokeColor="@color/black">-->
<!--                <ImageView-->
<!--                    android:id="@+id/iv_shop_logo"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    />-->
<!--            </androidx.cardview.widget.CardView>-->
<!--            </androidx.cardview.widget.CardView>-->

            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:cardCornerRadius="4dp"
                style="@style/Widget.MaterialComponents.CardView"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorPrimaryDark"
                android:elevation="5dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:id="@+id/iv_shop_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </com.google.android.material.card.MaterialCardView>
<!--            </LinearLayout>-->

            <View
                android:layout_gravity="center"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="#fff"/>

            <View
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#efefef"/>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:id="@+id/tv_shop_desc"
                    android:maxLines="2"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/desc_text"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#efefef"/>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:id="@+id/tv_offer_count"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FEE9F3"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lay_direction"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:tint="@color/bottom_box_color"
                    android:src="@drawable/ic_directions"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:text="Direction â€¢ "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_distance"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_access_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_access_option"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:tint="@color/bottom_box_color" />

                <TextView
                    android:id="@+id/tv_access_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_more_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:tint="@color/bottom_box_color"
                    android:src="@drawable/ic_more_details_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="More Details"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bottom_box_color"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
