<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ticket_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="109dp"
        android:layout_height="137dp"
        android:layout_margin="8dp"
         />

    <View
        android:id="@+id/vertical_dash_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dotted_line_vertical"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="29th - 30th Oct, 2023. 06:00 PM"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_regular"
            android:gravity="left"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="96 Felix Dlamini Road, Overport, 1st Floor."
            android:textColor="@color/desc_text"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="2 Tickets"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_details"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_booking_detail_button"
                android:fontFamily="@font/roboto_regular"
                android:text="Details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

